<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

    <!-- 输出到Logstash的Appender（若用RabbitMQ则替换为对应Appender） -->
    <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
        <destination>127.0.0.1:5000</destination> <!-- 对应docker中logstash的5000端口 -->
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <!-- 时间戳使用UTC格式，与aspect中的时间一致 -->
            <timestampFieldName>@timestamp</timestampFieldName>
            <timestampPattern>yyyy-MM-dd'T'HH:mm:ss.SSS'Z'</timestampPattern>

            <!-- 提取MDC中的变量（userId、ip等来自ServiceLogAspect） -->
            <includeMdcKeyName>userId</includeMdcKeyName>
            <includeMdcKeyName>ip</includeMdcKeyName>
            <includeMdcKeyName>methodName</includeMdcKeyName>
            <includeMdcKeyName>startTime</includeMdcKeyName>

            <!-- 固定字段：服务名、环境 -->
            <customFields>
                {
                "service": "file",
                "env": "dev"
                }
            </customFields>
        </encoder>
    </appender>

    <!-- 根日志配置：同时输出到控制台和Logstash -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="LOGSTASH"/>
    </root>
</configuration>